<!DOCTYPE html>
<html>
<head>
  <title>MakeSandwich</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrapper">
<%= render 'shared/header' %>
<div id="main">
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<%= yield %>
</div>
</div>
</body>
</html>
